{
  "name": "@chewieai/chat-widget",
  "version": "0.1.0",
  "description": "Production-ready chat widget for DeFi dApps - TypeScript, React, headless client",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css",
    "./vanilla": {
      "import": "./dist/vanilla.js",
      "require": "./dist/vanilla.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prepublishOnly": "pnpm run build && pnpm run test"
  },
  "keywords": [
    "react",
    "widget",
    "chat",
    "chatbot",
    "ai",
    "defi",
    "crypto",
    "kamino",
    "typescript",
    "headless"
  ],
  "author": "ChewieAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chewieai/chat-widget.git"
  },
  "homepage": "https://chewie.ai",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jest-axe": "^8.0.0",
    "jsdom": "^23.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.2.0",
    "vitest": "^1.0.4"
  },
  "dependencies": {}
}

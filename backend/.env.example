# Application
APP_NAME=Chewie AI Backend
APP_ENV=development
DEBUG=true
API_VERSION=v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=chewie_ai
POSTGRES_USER=chewie
POSTGRES_PASSWORD=change_me_in_production

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=  # IMPORTANT: Set strong password for production!
REDIS_DB=0

# API Keys (for authentication)
API_KEYS=dev-key-123,prod-key-456

# LLM Configuration
# Available providers:
#   - mock: No API key needed, returns dummy responses (for testing)
#   - openai: OpenAI GPT models (gpt-4, gpt-3.5-turbo, etc.)
#   - anthropic: Anthropic Claude models (claude-3-opus, claude-3-sonnet, etc.)
LLM_PROVIDER=mock  # Change to "openai" or "anthropic" for production
OPENAI_API_KEY=sk-your-openai-key  # Get from https://platform.openai.com/api-keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key  # Get from https://console.anthropic.com/

# LLM Models (used when corresponding provider is selected)
OPENAI_MODEL=gpt-4-turbo-preview  # Options: gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620  # Options: claude-3-opus-20240229, claude-3-5-sonnet-20240620, claude-3-haiku-20240307

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Cache settings (in seconds)
CACHE_TTL_SECONDS=30  # Query cache TTL in seconds (30 seconds for testing, 86400 for production)
APR_CACHE_TTL_SECONDS=30  # APR data cache TTL in seconds (30 seconds for testing, 3600 for production)

# CORS
CORS_ORIGINS=http://localhost:3000,https://app.kamino.finance

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# Kamino API (public, no key required!)
# Set to "mock" for fake data (development)
# Set to "real" for actual Kamino API data (production)
KAMINO_API_URL=https://api.kamino.finance
KAMINO_API_KEY=mock  # Change to "real" to use actual Kamino API

# Logging
LOG_LEVEL=INFO

# External ports (for Docker host machine access)
# These are the ports exposed on your host machine
POSTGRES_EXTERNAL_PORT=5432
REDIS_EXTERNAL_PORT=6379
API_EXTERNAL_PORT=8000

# Traefik / HTTPS Configuration
# For local development: set TRAEFIK_ENABLE=false and access via http://localhost:8000
# For production: set TRAEFIK_ENABLE=true and configure your domain
TRAEFIK_ENABLE=false
API_DOMAIN=api.chewieai.com
LETSENCRYPT_EMAIL=admin@chewieai.com

# Production deployment notes:
# 1. Set TRAEFIK_ENABLE=true
# 2. Set API_DOMAIN to your actual domain (e.g., api.yourdomain.com)
# 3. Set LETSENCRYPT_EMAIL to your email
# 4. Point your domain's DNS A record to your server's IP
# 5. Ensure ports 80 and 443 are open in your firewall
# 6. Traefik will automatically obtain SSL certificate from Let's Encrypt
